{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "nodejs18.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "NPM_CONFIG_PRODUCTION": "false"
  },
  "buildCommand": "chmod +x node_modules/.bin/vite && npx vite build",
  "installCommand": "npm install && chmod -R 755 node_modules/.bin",
  "devCommand": "npx vite"
}
